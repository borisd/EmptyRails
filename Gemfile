source 'https://rubygems.org'

gem 'rails', '3.2.3'

gem 'heroku'
gem 'haml'
gem 'haml-rails'
gem 'bond' # improvement to irb completion
gem 'therubyracer'
gem 'hirb' # make irb show data in nice table form
gem 'simple_form' # Easier form creation
gem "twitter-bootstrap-rails"
